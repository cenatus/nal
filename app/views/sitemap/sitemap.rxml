xml.instruct!

xml.urlset "xmlns" => "http://www.google.com/schemas/sitemap/0.84" do
  xml.url do
    xml.loc "http://netaudiolondon.org"
    xml.lastmod w3c_date(Time.now)
    xml.changefreq "always"
  end

  #### News ####
  @news_items.each do |news|
    xml.url do
      xml.loc "http://netaudiolondon.org/news/#{news.friendly_id}"
      xml.lastmod w3c_date(news.updated_at)
      xml.changefreq "weekly"
      xml.priority 0.9
    end
  end

  #### strand ####
  @strands.each do |strand|
    xml.url do
      xml.loc "http://netaudiolondon.org/#{Nal::Application::CURRENT_YEAR}/strand/#{strand.friendly_id}"
      xml.lastmod w3c_date(strand.updated_at)
      xml.changefreq "weekly"
      xml.priority 0.8
    end
  end

  #### event ####
  @events.each do |event|
    xml.url do
      xml.loc "http://netaudiolondon.org/#{Nal::Application::CURRENT_YEAR}/event/#{event.friendly_id}"
      xml.lastmod w3c_date(event.updated_at)
      xml.changefreq "weekly"
      xml.priority 0.8
    end
  end

  #### participant ####
  @participants.each do |participant|
    xml.url do
      xml.loc "http://netaudiolondon.org/#{Nal::Application::CURRENT_YEAR}/participant/#{participant.friendly_id}"
      xml.lastmod w3c_date(participant.updated_at)
      xml.changefreq "weekly"
      xml.priority 0.7
    end
  end

  #### page ####
  @pages.each do |page|
    xml.url do
      xml.loc "http://netaudiolondon.org/#{page.slug}"
      xml.lastmod w3c_date(page.updated_at)
      xml.changefreq "weekly"
      xml.priority 0.6
    end
  end

end
