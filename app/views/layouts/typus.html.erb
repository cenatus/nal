<!DOCTYPE html>

<html lang="<%= I18n.locale %>">

<head>

  <meta charset="utf-8" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="generator" content="Typus <%= Typus::VERSION %>" />

  <%= favicon_link_tag %>

  <title><%= Typus.admin_title %> &mdash; <%= yield :title %></title>

  <%= stylesheet_link_tag "/vendor/typus/stylesheets/reset",
                          "/vendor/jquery-ui-1.8.9.custom/css/ui-lightness/jquery-ui-1.8.9.custom.css",
                          "/vendor/jquery.fancybox-1.3.4/fancybox/jquery.fancybox-1.3.4.css",
                          "/vendor/typus/stylesheets/screen",
                          "/vendor/typus/stylesheets/application" %>

  <%= yield :stylesheets -%>

  <%= javascript_include_tag "/vendor/jquery-ui-1.8.9.custom/js/jquery-1.4.4.min.js",
                             "/vendor/jquery-ui-1.8.9.custom/js/jquery-ui-1.8.9.custom.min.js",
                             "/vendor/jquery.fancybox-1.3.4/fancybox/jquery.fancybox-1.3.4.pack.js",
                             "/vendor/typus/javascripts/jquery.searchField.js",
                             "/vendor/typus/javascripts/jquery.rails.js",
                             "/vendor/typus/javascripts/jquery.rails.autocomplete.js",
                             "/vendor/typus/javascripts/jquery.application.js",
                             "/vendor/ckeditor/ckeditor.js",
                             "/vendor/typus/javascripts/application" %>

  <%= yield :javascripts -%>

  <script type="text/javascript">
	window.onload = function()
	{
        if (jQuery('#news_item_summary').length > 0 ){
            CKEDITOR.replace( 'news_item_summary' );
        }
        if (jQuery('#news_item_content').length > 0 ){
            CKEDITOR.replace( 'news_item_content' );
        }
        if (jQuery('#content_area_content').length > 0 ){
            CKEDITOR.replace( 'content_area_content' );
        }
        if (jQuery('#strand_summary').length > 0 ){
            CKEDITOR.replace( 'strand_summary' );
        }
        if (jQuery('#strand_detail').length > 0 ){
            CKEDITOR.replace( 'strand_detail' );
        }
        if (jQuery('#event_summary').length > 0 ){
            CKEDITOR.replace( 'event_summary' );
        }
        if (jQuery('#event_detail').length > 0 ){
            CKEDITOR.replace( 'event_detail' );
        }

	};
  </script>

  <%= csrf_meta_tag %>

</head>

<body>

  <div id="wrapper">

    <div id="header_wrapper">

      <div id="header">
        <%= header %>
        <div class="clear"></div>
      </div>

      <div id="links">

        <div class="left">
          <%= apps %>
        </div>

        <div class="right">
          <%= login_info %>
        </div>

        <div class="clear"></div>

      </div>

    </div>

    <div id="content_wrapper">

      <div id="sidebar">
        <%= yield :sidebar %>
      </div>

      <div id="content">
        <%= yield :layout %>
      </div>

      <div class="clear"></div>

    </div>

    <div id="footer_wrapper">

      <div id="footer">
        <%= Typus.admin_sub_title.html_safe %>
      </div>

    </div>

  </div>

</body>

</html>
