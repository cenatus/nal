%html
  %head
    %title= @page_title or "Netaudio London"

    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'compiled/application.css'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    = javascript_include_tag :defaults

    = csrf_meta_tag


  %body.two-col-nal
    #container

      #header

        %ul.menu_main
          %li=nav_link("Home", "/")
          %li=nav_link("News", "/news")
          %li=nav_link("Participants", "/#{Nal::Application::CURRENT_YEAR}/participants")
          %li=nav_link("Strands", "/#{Nal::Application::CURRENT_YEAR}/strands")
          - for page in Page.where("year = '#{Nal::Application::CURRENT_YEAR}'").order("name DESC") do
            %li=nav_link(page.name, "/#{Nal::Application::CURRENT_YEAR}/#{page.slug}")




      #content
        = yield

