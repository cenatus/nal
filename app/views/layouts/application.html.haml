!!!
%html
  %head
    %title= @page_title or "Netaudio London"

    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'compiled/application.css'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    = javascript_include_tag :defaults

    = csrf_meta_tag


  %body.two-col-nal
    #container

      #header
        %hr
        %ul.menu
          %li=nav_link("Home_", "/")
          %li=nav_link("News_", "/news")
          %li=nav_link("Participants_", "/#{Nal::Application::CURRENT_YEAR}/participants")
          %li=nav_link("Strands_", "/#{Nal::Application::CURRENT_YEAR}/strands")
          - for page in Page.where("year = '#{Nal::Application::CURRENT_YEAR}'").order("name DESC") do
            %li=nav_link("#{page.name}_", "/#{Nal::Application::CURRENT_YEAR}/#{page.slug}")

        %ul.social
          %li= link_to "Facebook", "http://facebook.com/netaudioldn"
          %li= link_to "Last FM", "http://www.last.fm/group/Netaudio+London"
          %li= link_to "Twitter", "http://twitter.com/netaudioldn"
          %li= link_to "RSS", "http://feeds.feedburner.com/netaudiolondon-blog"
          %li= link_to "Newsletter", ""


        #logo
          %p#date
            13-15TH MAY
          %p#heading
            NETAUDIO
        #mpu
          MPU 310 x 184px





      #content
        %hr.divider
        = yield

