%h2= "#{Nal::Application::CURRENT_YEAR} Festival_"

%hr.divider_medium

- i = 0

- for strand in @strands do

  - cell = i % 2 == 0 ? "odd" : "even"
  .strand{:class => "msp#{i} "+cell}

    %a.mosaic-overlay{:href => "/#{Nal::Application::CURRENT_YEAR}/strand/#{strand.friendly_id}", :target => "_blank"}
      .details
        %p
          :preserve
            #{strand.summary}
        %h3
          = "#{strand.name}_"

    .mosaic-backdrop
      - article_thumb strand

    - i += 1

%hr.divider_medium
