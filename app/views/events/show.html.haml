%h2= "#{@event.name}"

- article_image @event

:preserve
  #{@event.detail}

- if @event.performers.length > 0
  %h3 Related Performers
  = comma = ""
  - for performer in @event.performers do
    = comma
    = link_to(performer.name, "/#{Nal::Application::CURRENT_YEAR}/participant/#{performer.friendly_id}")
    - comma = "|"

